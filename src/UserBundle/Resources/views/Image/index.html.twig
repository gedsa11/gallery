{% extends 'layout.html.twig' %}

{% block body %}
   {{ parent() }}
   {% for flashMessage in app.session.flashbag.get('mensaje') %}
		<div class="alert alert-success" role="alert">
			<div class="container"> {{ flashMessage }} </div>
		</div>
	{% endfor %}

		<div class="container">
		<div class="col-md-12">
			<div class="row page-header" style="margin: 12px; margin-left: 1px">
				<h2 class="padding-none col-md-10"> Im치genes </h2>
				 <a href="{{ path('image_add') }}" class="btn btn-sm btn-success col-md-2"> <span style="font-size: 18px">Agregar im치gen</span></a>
			</div>

			<div class="table-responsive">
				
				<table class="table table-striped table-hover ">
					<thead>
						<tr>
                            <th class="text-center"> Titulo</th>
                            <th class="text-center"> Im치gen</th>
                            <th class="text-center"> Descripci칩n</th>
                            <th class="text-center"> Estado</th>
                            <th class="text-center" style="width: 300px">Acciones</th>
						</tr>
					</thead>
					<tbody>
				        {% for img in images %}
                            <tr data-id="{{ img.id }}">
                                <td class="text-center">{{ img.title }}</td>
                                <td class="text-center">
                                	<img src="{{asset('imagesGallery/'~img.image)}}" alt="" class="img-fluid" width="100px">
                                </td>
                                <td class="text-center">{{ img.description }}</td>
                                <td class="text-center">
	                                {% if img.status == 0 %}
	                                        <strong>
	                                        	Por aprobar
	                                        </strong>
	                                    {% elseif img.status == 1 %}
	                                        <strong>
	                                        	Aprobada
	                                        </strong>
	                                    {% endif %}
	                            </td>
                                <td class="actions text-right" >
			                       {% if is_granted('ROLE_USER') %}
			                         <a href="{{ path('image_edit', { id: img.id }) }}" class="btn btn-sm btn-primary">
			                            Editar
			                        </a>


			                        <a href="{{ path('image_delete', { id: img.id }) }}" class="btn btn-sm btn-danger btn-delete" onclick="return confirm('Estas seguro?')">
			                            Eliminar
			                        </a>
			                        {% endif %}

			                       	{% if is_granted('ROLE_ADMIN') %}
				                         <a href="{{ path('image_ok', { id: img.id }) }}" class="btn btn-sm btn-warning">
				                            Aprobar
				                        </a>
				                    {% endif %}

				                </td>
                            </tr>
				        {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}