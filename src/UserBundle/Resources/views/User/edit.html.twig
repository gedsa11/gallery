{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    
	<div class="main container">
		<div class="row well">
			<div class="col-md-6" style="margin:0 auto">
				<div class="page-header">
					<h2>Editar usuario</h2>
				</div>
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role' : 'form'}}) }}
				    <h4 class="text-danger">{{ form_errors(form) }}</h4>

					<fieldset>
					    <div class="form-group">
					        {{ form_label(form.username) }}
					        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : 'Tu username'}}) }}
					        <span class="text-danger">{{ form_errors(form.username) }}</span>
					    </div>

					    <div class="form-group">
					        <label>Nombre</label>
					        {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre'}}) }}
					        <span class="text-danger">{{ form_errors(form.firstName) }}</span>
					    </div>

					    <div class="form-group">
					        <label>Apellido</label>
					        {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder' : 'Apellido'}}) }}
					        <span class="text-danger">{{ form_errors(form.lastName) }}</span>
					    </div>

					    <div class="form-group">
					        {{ form_label(form.email) }}
					        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : ' Email'}}) }}
					        <span class="text-danger">{{ form_errors(form.email) }}</span>
					    </div>

					    <div class="form-group">
					        {{ form_label(form.password) }}
					        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Password'}}) }}
					        <span class="text-danger">{{ form_errors(form.password) }}</span>
					    </div>

					    <div class="form-group">
					        <label>Rol</label>
					        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
					        <span class="text-danger">{{ form_errors(form.role) }}</span>
					    </div>

					</fieldset>

				    <p>
				        {{ form_widget(form.save, {'label' : 'Actualizar usuario', 'attr': {'class': 'btn btn-success'}}) }}
				    </p>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}